<%= form_for [@user, @account_rep], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :account_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :account_id, account_options, :include_blank => '-- Select --' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rep_level, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :rep_level, rep_level_options, :include_blank => '-- Select --' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_account_reps_path(@user), :class => 'btn' %>
  </div>
<% end %>
