<td colspan="4" style="width: 100%; padding: 0">
  <%= form_for [@user, @new_account_rep], :html => { :class => 'form-horizontal' }, :remote => true do |f| %>
    <table style="width: 100%"><tr>
        <td style="width: 35%"><%= @user.email %></td>
        <td style="width: 25%"><%= f.select :account_id, account_options, {:include_blank => '-- Select --'}, {:style => "width: 120px"} %></td>
        <td style="width: 20%"><%= f.select :rep_level, rep_level_options, {:include_blank => '-- Select --'}, {:style => "width: 120px"} %></td>
        <td style="width: 20%">
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </td>
      </tr></table>
  <% end %>
</td>

<script type="text/javascript">
  $(function(){
    $("form#new_account_rep").submit(function(){
      $.ajax({
        type: "PUT",
        url: $(this).attr('action'),
        data: $(this).serialize()
      })
    });
  })
</script>