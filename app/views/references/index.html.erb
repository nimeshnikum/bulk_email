<%- model_class = Reference -%>
<div class="page-header">
  <h1>References for <%= link_to @account.title, account_path(@account) unless @account.title.nil? %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th>Moved to Prospect?</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><%= link_to(reference.company, account_reference_path(@account, reference)) %></td>
        <td><%= reference.email %></td>
        <td><%= reference.contact %></td>
        <td><%= reference.phone %></td>
        <td><%= prospect_status(reference) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_account_reference_path(@account, reference), :class => 'btn btn-mini' %>
          <%= link_to 'Move to Prospect',
                      move_to_prospect_account_reference_path(@account, reference), 
                      :data => {:confirm => "Do you really want to move it to prospect?"},
                      :class => 'btn btn-mini' unless reference.prospect.present? %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      account_reference_path(@account, reference),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_account_reference_path(@account),
            :class => 'btn btn-primary' %>
<%= link_to 'Back', accounts_path, :class => 'btn'  %>