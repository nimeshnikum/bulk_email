<%- model_class = Crp -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:country_code) %></th>
      <th><%= model_class.human_attribute_name(:country_name) %></th>
      <th><%= model_class.human_attribute_name(:selling_rate) %></th>
      <th><%= model_class.human_attribute_name(:billing_increment) %></th>
      <th><%= model_class.human_attribute_name(:route_type) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @crps.each do |crp| %>
      <tr>
        <td><%= link_to(crp.country_code, crp_path(crp)) %></td>
        <td><%= crp.country_name %></td>
        <td><%= crp.selling_rate %></td>
        <td><%= crp.billing_increment %></td>
        <td><%= crp.route_type %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_crp_path(crp), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      crp_path(crp),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_crp_path,
            :class => 'btn btn-primary' %>
