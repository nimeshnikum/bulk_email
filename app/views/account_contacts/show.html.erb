<%- model_class = AccountContact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= link_to(@account_contact.account.number, account_path(@account_contact.account)) %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @account_contact.name %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @account_contact.phone %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @account_contact.email %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:skype) %>:</strong></dt>
  <dd><%= @account_contact.skype %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:msn) %>:</strong></dt>
  <dd><%= @account_contact.msn %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:icq) %>:</strong></dt>
  <dd><%= @account_contact.icq %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:role_id) %>:</strong></dt>
  <dd><%= @account_contact.role_id %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:main_contact) %>:</strong></dt>
  <dd><%= @account_contact.main_contact %>&nbsp;</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              account_account_contacts_path(@account), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_account_contact_path(@account, @account_contact), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_account_contact_path(@account, @account_contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
