<%- model_class = Prospect -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @prospect.company_name %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:email1) %>:</strong></dt>
  <dd><%= @prospect.email1 %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:email2) %>:</strong></dt>
  <dd><%= @prospect.email2 %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @prospect.phone %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:prospect_type) %>:</strong></dt>
  <dd><%= @prospect.prospect_type %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @prospect.status %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @prospect.remarks %>&nbsp;</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              prospects_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_prospect_path(@prospect), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              prospect_path(@prospect),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
