<%= form_for @prospect, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :company_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :prospect_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :prospect_type, prospect_type_options, :include_blank => "-- Select --" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :status, status_options, :include_blank => "-- Select --" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remarks, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :remarks, :class => 'text_area', :rows => 3 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                prospects_path, :class => 'btn' %>
  </div>
<% end %>
