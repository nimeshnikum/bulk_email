<%- model_class = Email -%>
<div class="page-header">
  <h1>Email Logs</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:target_type) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%= model_class.human_attribute_name(:email_template_id) %></th>
      <th><%= model_class.human_attribute_name(:sent_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @emails.each do |email| %>
      <tr class="<%= 'strong' if email.sent_at.blank? %>">
        <td><%= link_to email.subject, log_path(email) %></td>
        <td><%= (email.target == 'C') ? 'Customer' : 'Prospect' %></td>
        <td><%= email.targets.join(", ") %></td>
        <td><%= email.email_template.try(:name) %></td>
        <td><%= email.sent_at %></td>
        <td>
          <% unless email.sent_at.blank? %>
            <%= link_to t('.view', :default => t("helpers.links.view")),
                      log_path(email), :class => 'btn btn-mini' %>
          <% else %>
            <%= link_to t('.send', :default => t("helpers.links.send")),
                      write_email_path(email), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      log_path(email),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
