<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @email.from %>&nbsp;</dd>
  <dt><strong><%= @email.target_is_customer? ? 'Customers' : 'Prospects' %>:</strong></dt>
  <dd><%= @email.targets.join(", ") %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @email.subject %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd class="richtext_display wrap-text"><%= render 'emails/preview' %>&nbsp;</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              logs_path, :class => 'btn'  %>
  
</div>
