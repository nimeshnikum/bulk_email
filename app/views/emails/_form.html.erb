<%= form_for @email, :url => send_to_self_emails_path, :html => { :class => 'form-horizontal', :method => :post } do |f| %>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.bootsy_area :body, :class => 'bootsy_area', :editor_options => {image: false, color: false} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Send email', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                email_templates_path, :class => 'btn' %>
  </div>
<% end %>
