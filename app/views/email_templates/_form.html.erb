<%= form_for @email_template, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :target, 'C' %> Customers &nbsp;
      <%= f.radio_button :target, 'P' %> Prospects
    </div>
  </div>
  <div class="control-group customer_role_box">
    <%= f.label :role_id, 'Customer Role', :class => 'control-label' %>
    <div class="controls">
      <%= f.select :role_id, Role.for_account_contact.collect {|r| [r.name, r.id]}, :prompt => '-- Select --' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :template_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.radio_button :template_type, 'TopRoute' %> Top Routes &nbsp;
      <%= f.radio_button :template_type, 'CRP' %> CRP &nbsp;
      <%= f.radio_button :template_type, '' %> NONE
    </div>
  </div>
  <div class="control-group">
    <%= f.label :from, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :from, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :header, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :header, :class => 'text_area', :rows => 3, :wrap => 'hard' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.bootsy_area :body, :class => 'bootsy_area', :editor_options => {image: false, color: false} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :signature, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :signature, :class => 'text_area', :rows => 3, :wrap => 'hard' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_default, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_default, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                email_templates_path, :class => 'btn' %>
  </div>
<% end %>
